<div class="floating-cart" id="floatingCart">
    <h3 style="background:linear-gradient(45deg,#ff8cb9,#ffd7a8);-webkit-background-clip:text;color:transparent;">
        Your Glow Cart
    </h3>
    <div id="cartItems" style="margin:20px 0; max-height:50vh; overflow-y:auto;"></div>
    <div style="border-top:2px dashed #ffd7a8; padding-top:15px; text-align:right; font-size:20px; color:#cc6699;">
        <strong>Total: <span id="cartTotal">₹0</span></strong>
    </div>
</div>

<!-- BILL Modal -->
<div id="billModal">
    <div class="bill-container">
        <div class="bill-header">
            <h2>BILL</h2>
            <button class="close-bill" onclick="closeBill()">Close</button>
        </div>
        <table class="bill-table">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody id="billItems"></tbody>
        </table>
        <div class="grand-total">
            Grand Total: <span id="grandTotal">₹0</span>
        </div>
        <div class="bill-actions">
            <button class="print-btn" onclick="window.print()">Print Bill</button>
            <button class="continue-btn" onclick="closeBill()">Continue Shopping</button>
        </div>
    </div>
</div>

<script>
    let cart = JSON.parse(localStorage.getItem('mommyGlowCart') || '[]');

    function saveCart() {
        localStorage.setItem('mommyGlowCart', JSON.stringify(cart));
        updateAll();
    }

    function addToCart(btn, name, price) {
        const item = cart.find(i => i.name === name);
        if (item) item.qty += 1;
        else cart.push({ name, price: Number(price), qty: 1 });
        saveCart();

        btn.classList.add('added');
        btn.innerHTML = 'Added! Select one';
        setTimeout(() => {
            btn.classList.remove('added');
            btn.innerHTML = 'Add to Glow Cart';
        }, 2000);

        sparkleBurst();
    }

    function sparkleBurst() {
        for(let i = 0; i < 12; i++) {
            setTimeout(() => {
                const s = document.createElement('div');
                s.innerHTML = 'Sparkles';
                s.style.position = 'fixed';
                s.style.left = Math.random() * window.innerWidth + 'px';
                s.style.top = window.innerHeight + 'px';
                s.style.fontSize = '32px';
                s.style.pointerEvents = 'none';
                s.style.animation = 'floatUp 2s ease-out forwards';
                document.body.appendChild(s);
                setTimeout(() => s.remove(), 2000);
            }, i * 80);
        }
    }

    function updateAll() {
        const totalItems = cart.reduce((s,i) => s + i.qty, 0);
        const totalPrice = cart.reduce((s,i) => s + i.price * i.qty, 0);

        document.getElementById('cartBadge').textContent = totalItems;
        document.getElementById('floatingCart').classList.toggle('show', totalItems > 0);
        if (cart.length === 0) {
            document.getElementById('cartItems').innerHTML = '<p style="text-align:center;color:#cc6699;">Your cart is empty</p>';
        } else {
            document.getElementById('cartItems').innerHTML = cart.map(item => `
                <div style="padding:12px 0;border-bottom:1px dashed #ffd7a8;display:flex;justify-content:space-between;align-items:center;gap:12px;">
                    <div style="flex:1;min-width:0"><strong style="display:block;">${item.name}</strong>
                        <small style="color:#666;display:block;margin-top:6px;">Unit: ₹${item.price}</small>
                    </div>
                    <div style="display:flex;align-items:center;gap:8px">
                        <button class="qty-btn decrease" data-name="${item.name}" style="background:#fff;border:1px solid #ffd7a8;border-radius:8px;padding:6px 10px;">−</button>
                        <div style="min-width:36px;text-align:center;font-weight:600">${item.qty}</div>
                        <button class="qty-btn increase" data-name="${item.name}" style="background:#fff;border:1px solid #ffd7a8;border-radius:8px;padding:6px 10px;">+</button>
                        <div style="color:#cc6699;font-weight:bold;margin-left:10px">₹${item.price * item.qty}</div>
                        <button class="remove-item" data-name="${item.name}" style="background:#cc0000;color:#fff;border:none;border-radius:8px;padding:6px 10px;margin-left:8px;cursor:pointer;">Remove</button>
                    </div>
                </div>
            `).join('');

            // Attach handlers for newly rendered controls
            document.querySelectorAll('#cartItems .increase').forEach(btn => {
                btn.addEventListener('click', function() {
                    const name = this.dataset.name;
                    const it = cart.find(i => i.name === name);
                    if (it) { it.qty += 1; saveCart(); }
                });
            });
            document.querySelectorAll('#cartItems .decrease').forEach(btn => {
                btn.addEventListener('click', function() {
                    const name = this.dataset.name;
                    const it = cart.find(i => i.name === name);
                    if (it) {
                        if (it.qty > 1) { it.qty -= 1; saveCart(); }
                        else { // remove when qty goes to 0
                            cart = cart.filter(x => x.name !== name);
                            saveCart();
                        }
                    }
                });
            });
            document.querySelectorAll('#cartItems .remove-item').forEach(btn => {
                btn.addEventListener('click', function() {
                    const name = this.dataset.name;
                    cart = cart.filter(i => i.name !== name);
                    saveCart();
                });
            });
        }

        document.getElementById('cartTotal').textContent = '₹' + totalPrice;
    }

    document.getElementById('billBtn').onclick = () => {
        if (cart.length === 0) return alert('Your cart is empty!');
        let html = '', grand = 0;
        cart.forEach(item => {
            const total = item.price * item.qty;
            grand += total;
            html += `<tr>
                <td style="text-align:left;padding-left:20px;">${item.name}</td>
                <td>${item.qty}</td>
                <td>₹${item.price}</td>
                <td style="color:#cc6699;font-weight:bold;">₹${total}</td>
            </tr>`;
        });
        document.getElementById('billItems').innerHTML = html;
        document.getElementById('grandTotal').textContent = '₹' + grand;
        document.getElementById('billModal').style.display = 'flex';
    };

    window.closeBill = () => document.getElementById('billModal').style.display = 'none';

    document.getElementById('cartIcon').onclick = () => document.getElementById('floatingCart').classList.toggle('show');

    document.querySelectorAll('.add-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            addToCart(this, this.dataset.name, this.dataset.price);
        });
    });

    updateAll();
</script>
