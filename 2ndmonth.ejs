  <style>
    :root {
      --pink: #e91e63;
      --pink-dark: #c2185b;
      --pink-glow: #ff6b9d;
      --light-pink: #fce4ec;
      --white: #ffffff;
      --success: #28a745;
      --danger: #d32f2f;
      --warning: #ff9800;
      --info: #1976d2;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
