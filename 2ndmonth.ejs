      transform: translateY(-20px) scale(1.03);
      box-shadow: 0 45px 100px rgba(233,30,99,0.4);
    }
    .section::before {
      content: '';
      position: absolute;
      top: -50%; left: -50%;
      width: 200%; height: 200%;
      background: radial-gradient(circle, rgba(233,30,99,0.12) 0%, transparent 70%);
      opacity: 0;
      transition: 0.8s;
    }
    .section:hover::before { opacity: 1; }

    h2.section-title {
      font-size: 2.1rem;
      color: var(--pink-dark);
      margin-bottom: 28px;
      font-weight: 700;
      text-align: center;
      position: relative;
    }
    h2.section-title::after {
      content: '';
      width: 120px;
      height: 6px;
      background: linear-gradient(90deg, transparent, var(--pink), transparent);
      display: block;
      margin: 18px auto 0;
      border-radius: 50px;
    }

    /* Do / Don't Grid */
    .flex-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 32px;
      margin-top: 20px;
    }
    .do-box, .avoid-box {
      background: rgba(255,255,255,0.9);
      padding: 28px;
      border-radius: 22px;
      backdrop-filter: blur(12px);
      transition: all 0.4s ease;
    }
    .do-box {
      border-left: 7px solid var(--success);
      background: #f8fff8;
    }
    .avoid-box {
      border-left: 7px solid var(--danger);
      background: #fff8f8;
    }
    .do-box:hover, .avoid-box:hover {
      transform: translateY(-8px);
    }

    .do-box h3, .avoid-box h3 {
      font-size: 1.5rem;
      margin-bottom: 18px;
      text-align: center;
    }
    .do-box h3 { color: var(--success); }
    .avoid-box h3 { color: var(--danger); }

    ul {
      list-style: none;
    }
    li {
      padding: 12px 0;
      font-size: 1.08rem;
      position: relative;
      padding-left: 44px;
      transition: all 0.3s ease;
    }
    li:hover { transform: translateX(10px); }

    .do-item::before {
      content: "Checkmark";
      position: absolute;
      left: 0;
      top: 10px;
      font-size: 1.7rem;
      color: var(--success);
      animation: pulse 2s infinite;
    }
    .avoid-item::before {
      content: "Cross";
      position: absolute;
      left: 0;
      top: 10px;
      font-size: 1.7rem;
      color: var(--danger);
    }
    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.15); }
    }

    /* Tip Box */
    .tip-box {
      background: linear-gradient(135deg, #fff8e1, #ffecb3);
      border-left: 7px solid var(--warning);
      padding: 20px 28px;
      border-radius: 20px;
      margin: 24px 0;
      font-size: 1.1rem;
      font-weight: 600;
      color: #e65100;
      text-align: center;
      box-shadow: 0 10px 30px rgba(255,193,7,0.2);
    }

    /* Emergency & Family Boxes */
    .emergency-box, .family-box {
      background: rgba(255,255,255,0.96);
      backdrop-filter: blur(20px);
      border-radius: 32px;
      padding: 40px;
      margin: 60px 0;
      text-align: center;
      box-shadow: 0 30px 80px rgba(0,0,0,0.15);
