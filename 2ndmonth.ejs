    /* Floating Section Cards */
    .section {
      background: rgba(255,255,255,0.96);
      backdrop-filter: blur(20px);
      border-radius: 28px;
      padding: 36px 32px;
      margin: 45px 0;
      box-shadow: 0 20px 50px rgba(233,30,99,0.22);
